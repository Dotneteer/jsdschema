{
  "name": "jsdschema",
  "displayName": "JsdSchema",
  "description": "PreEmptive JSDefender JSON Schema extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/jsdefender.config.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jsdschema.helloWorld",
        "title": "Hello World"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "jsdefender.config.json",
        "url": "./src/jsdschema.json"
      }
    ],
    "iconThemes": [
      {
        "id": "jsdefender-icon-theme",
        "label": "JSDefender Icon Theme",
        "path": "./out/jsdefender-icons.json",
        "_watch": true
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copyIcons",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "copyIcons": "ts-node ./src/scripts/copyOutFiles.ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  }
}
